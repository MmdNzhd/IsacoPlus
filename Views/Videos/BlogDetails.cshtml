@using DNTPersianUtils.Core;
@{
    ViewData["Title"] = "اخبار";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

@model KaraYadak.Models.Blog


@section vendors{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
            integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg=="
            crossorigin="anonymous"></script>




    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"
            integrity="sha256-OFRAJNoaD8L3Br5lglV7VyLRf0itmoBzWUoM+Sji4/8=" crossorigin="anonymous"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/js/fontawesome.min.js"
            integrity="sha256-fjQmECvnpgwxO4TyEkO7CJeu97Lu+JKoGDCNEVDs7X0=" crossorigin="anonymous"></script>
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.0/js/mdb.min.js"></script>
    <script src="~/assets/js/jquery.cookie.js"></script>
}

@*header*@
<div class="container-fluid p-0 mx-auto blog-single bg-product">

    <partial name="Header" />

    <header class="my-5 container bg-white rounded shadow p-3">
        <div class="row">
            @*Blog Image*@
            <div class="col-lg-3 mb-3">
                <img class="d-block w-75 mx-auto" src="/uploads/Blogs/@Model.Image" />
            </div>

            @*Blog Details*@
            <div class="col-lg-9 mb-3">
                <h1 class="d-block text-right font-kalameBlack mb-3">گرانی دست بردار بازار خودرو نیست!!</h1>
                <p class="d-block text-justify mb-3">
                    @Model.ShortDescription
                </p>
                <span class="d-block text-right ">@Model.CreateAt.ToFriendlyPersianDateTextify()</span>
            </div>
        </div>
    </header>

    <hr class="container my-5" />

    <div class="container post-content shadow bg-white p-3 mb-5">
        <div class="row">
            <div class="col-12">
                
                <center>
                    <img class="mb-3" src="~/uploads/Blogs/@Model.Image" />
                </center>

                <span class="d-block text-justify mb-3">
@Model.Text
                </span>
            </div>
        </div>
    </div>
</div>