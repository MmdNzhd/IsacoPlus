@{
    Layout = null;
}
<!doctype html>
<html lang="fa">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@(ViewBag.PageTitle == null ? "پنل مدیریت" : ViewBag.PageTitle)</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="/bordash/assets/media/image/favicon.png" />

    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/css/vendors-rtl.min.css">
    @RenderSection("vendorstyles", false)
    <link rel="stylesheet" href="/bordash/vendors/bundle.css" type="text/css">
    @RenderSection("styles", false)
    <link rel="stylesheet" href="/bordash/assets/css/app.min.css" type="text/css">
</head>
<body>
    <div class="preloader">
        <div class="preloader-icon"></div>
    </div>
    <div class="header">
        <div>
            <ul class="navbar-nav">
             
            </ul>
        </div>
        <div>
            <ul class="navbar-nav">
                <li class="nav-item">
                   
                </li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link" title="تمام صفحه" data-toggle="fullscreen">
                        <i class="maximize" data-feather="maximize"></i>
                        <i class="minimize" data-feather="minimize"></i>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav d-flex align-items-center">
                <li class="nav-item header-toggler">
                    <a href="#" class="nav-link">
                        <i data-feather="arrow-down"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div id="main">
        <div class="navigation">
            <div class="navigation-menu-tab">
                <div>
                    <div class="navigation-menu-tab-header" data-toggle="tooltip" title="@User.Identity.Name" data-placement="right">
                        <a href="#" class="nav-link" data-toggle="dropdown" aria-expanded="false">
                            <figure class="avatar avatar-sm">
                                <img src="/bordash/assets/media/image/avatar.png" class="rounded-circle" alt="avatar">
                            </figure>
                        </a>
                        <div class="dropdown-menu dropdown-menu-left dropdown-menu-big">
                            <div class="p-3 text-center" data-backround-image="/bordash/assets/media/image/image1.jpg">
                                <figure class="avatar mb-3">
                                    <img src="/bordash/assets/media/image/avatar.png" class="rounded-circle" alt="image">
                                </figure>
                                <h6 class="d-flex align-items-center justify-content-center">
                                    @User.Identity.Name
                                    <a href="#" class="btn btn-primary btn-sm ml-2" data-toggle="tooltip" title="ویرایش پروفایل">
                                        <i data-feather="edit-2"></i>
                                    </a>
                                </h6>
                            </div>
                            <div class="dropdown-menu-body">
                                <div class="border-bottom p-4">
                                    <h6 class="text-uppercase font-size-11 d-flex justify-content-between">
                                        حافظه
                                        <span>%25</span>
                                    </h6>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: 35%;"
                                             aria-valuenow="35"
                                             aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                                <div class="list-group list-group-flush">
                                    <a href="#" class="list-group-item">پروفایل</a>
                                    <a href="#" class="list-group-item d-flex">
                                        دنبال‌کنندگان<span class="text-muted ml-auto">214</span>
                                    </a>
                                    <a href="#" class="list-group-item d-flex">
                                        صندوق ورودی <span class="text-muted ml-auto">18</span>
                                    </a>
                                    <a href="#" class="list-group-item" data-sidebar-target="#settings">صورتحساب</a>
                                    <a href="#" class="list-group-item" data-sidebar-target="#settings">راهنمایی?</a>
                                    <a asp-action="logout" asp-controller="account" class="list-group-item text-danger" data-sidebar-target="#settings">خروج</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex-grow-1">
                    <ul>
                        <li>
                            @*<a class="active" href="#" data-toggle="tooltip" data-placement="right" title="حسابداری" data-nav-target="#accounting-menu">
                                <i data-feather="dollar-sign"></i>
                            </a>*@
                        </li>
                        <li>
                            @*<a href="#" data-toggle="tooltip" data-placement="right" title="انبارداری" data-nav-target="#warehouse-menu">
                                <i data-feather="database"></i>
                            </a>*@
                        </li>
                        <li>
                            @*<a href="#" data-toggle="tooltip" data-placement="right" title="سایت" data-nav-target="#cms-menu">
                                <i data-feather="anchor"></i>
                            </a>*@
                        </li>
                        <li>
                            @*<a href="#" data-toggle="tooltip" data-placement="right" title="فروشگاه" data-nav-target="#shop-menu">
                                <i data-feather="book"></i>
                            </a>*@
                        </li>
                    </ul>
                </div>
                <div>
                    <ul>
                        <li>
                            <a href="/" data-toggle="tooltip" data-placement="right" title="رفتن به فروشگاه">
                                <i data-feather="settings"></i>
                            </a>
                        </li>
                        <li>
                            <a href="/siteAccount/LogOut" data-toggle="tooltip" data-placement="right" title="خروج">
                                <i data-feather="log-out"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="navigation-menu-body">
                <div>
                    <div id="navigation-logo">
                        <a href="#">
                            <img class="logo" src="/bordash/assets/media/image/logo-F.png" alt="logo">
                            <img class="logo-light" src="/bordash/assets/media/image/logo-light.png" alt="light logo">
                        </a>
                    </div>
                </div>
                <div class="navigation-menu-group">
                    <div class="open" id="accounting-menu">
                        <ul>
                            <li class="navigation-divider">مدیریت</li>
                            <li><a class="active" href="/dashboard">داشبورد<span class="badge badge-danger"></span></a></li>
                            <li><a class="active" asp-action="index" asp-controller="products">محصولات انبار<span class="badge badge-danger"></span></a></li>
                            <li><a class="active" href="/productcategories">دسته بندی ها<span class="badge badge-danger"></span></a></li>
                            <li><a class="active" href="/baner">مدیریت بنر<span class="badge badge-danger"></span></a></li>
                            <li><a class="active" href="/shopProducts">محصولات فروشگاه<span class="badge badge-danger"></span></a></li>
                            <li><a class="active" href="/comments">مدیریت نظرات<span class="badge badge-danger"></span></a></li>
                            <li><a class="active" href="/contactUsmanager">مدیریت تماس با ما<span class="badge badge-danger"></span></a></li>
                            <li><a class="active" href="/Settings"> تنظیمات<span class="badge badge-danger"></span></a></li>

                        </ul>
                    </div>
                    <div id="warehouse-menu">
                        <ul>
                            <li class="navigation-divider">انبارداری</li>
                            <li><a asp-action="index" asp-controller="home">انبار<span class="badge badge-danger">2</span></a></li>
                        </ul>
                    </div>
                    <div id="cms-menu">
                        <ul>
                            <li class="navigation-divider">سایت</li>
                        </ul>
                    </div>
                    <div id="shop-menu">
                        <ul>
                            <li class="navigation-divider">فروشگاه</li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <main class="main-content">
            <div class="page-header">
                <div class="container-fluid d-sm-flex justify-content-between">
                    <h4>@ViewBag.Title</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="#">داشبرد</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="#">صفحات</a>
                            </li>
                            <li class="breadcrumb-item" aria-current="page">صفحه خالی</li>
                        </ol>
                    </nav>
                </div>
            </div>
            @RenderBody()

            <footer>
                <div class="container-fluid">
                    <div>© 1399 | مدیریت حسابداری و انبار | ارایه از  <a target="_blank" href="//niknet.co">Niknetco</a></div>

                    <div>
                        <nav class="nav">
                            <a href="#" class="nav-link">تغییر لاگ</a>
                            <a href="#" class="nav-link">راهنمایی</a>
                        </nav>
                    </div>
                </div>
            </footer>
        </main>
    </div>
    <script src="/bordash/vendors/bundle.js"></script>
    @RenderSection("vendors", false)
    <script src="/bordash/assets/js/custom.js"></script>
    <script src="/bordash/assets/js/app.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>