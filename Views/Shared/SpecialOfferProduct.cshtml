@model ICollection<KaraYadak.ViewModels.ProductForIndexVM>
    <div class="row  hj-gallery py-5 m-0 p-0 mt-5">
        <div class="col-lg-3 mv-g-title col-12 px-4 d-flex flex-column justify-content-center">
            <div class="row w-100 mx-auto mb-3">
                <h2 class="text-right w-100"><b class="hj-producttext text-white">پیشنهاد های</b></h2>
            </div>

            <div class="row w-100 mx-auto mb-3">
                <h1 class="text-center w-100 "><b class="hj-prouduct-Tslider"> ویژه</b></h1>
            </div>
            <div class="row w-100 mx-auto mb-0 text-white">
                <h2 class="text-left w-100 "><b class="hj-producttext text-white"> امروز</b></2>
            </div>


            @*<div class="row w-100 mx-auto text-center my-3 mb-5">
                <span id="timer-offer1" class="timer-offer w-100 mx-auto" style="font-weight: bold;"></span>
            </div>*@

        </div>
        <div class="col-lg-9  col-12">
            <div class="swiper-container swiper-container2 swiper-container-initialized swiper-container-horizontal swiper-container-free-mode swiper-container-rtl"
                 style="height:auto !important">
                <div class="swiper-wrapper hj-img-swiper"
                     style="transition-duration: 0ms; transform: translate3d(0px, 0px, 0px);">
                   
                    @foreach (var item in Model)
                    {
                        <div class="swiper-slide swiper-slide-active" style="width: 311.667px; margin-left: 30px;">
                            <div class="hj-card my-5 py-5 w-100  ">
                                @if (!string.IsNullOrEmpty(item.Picture))
                                {
                                    <img src="@item.Picture" class="img-fluid hj-productImg w-75">
                                }
                                else
                                {
                                    <img src="~/img/DefualtProduct.png" class="img-fluid hj-productImg w-75" />
                                }
                                <div class="row w-100 mx-auto text-center mt-2 mv-title">
                                    <h1 class="font-kalameBlack text-center mx-auto">
                                        <b class=" font-kalameBlack text-dark">@item.Title</b>
                                    </h1>
                                </div>

                                <div class="row w-100 mx-auto text-center pb-3 px-5 ">
                                    <h2 class="font-kalame text-center mx-auto"> <b class="font-kalame text-success">450.500</b></h2>
                                </div>
                                <div class="row w-100 mx-auto text-center">

                                    <button type="button" onclick="document.location='/Products/ProductDetail?code=@item.Code'"
                                            class="btn btn-primary w-75 mx-auto text-center hj-more-button py-2">
                                        <b>
                                            اطلاعات
                                            بیشتـر
                                        </b>
                                    </button>
                                </div>

                            </div>

                        </div>
                    }

                </div>
                <!-- Add Pagination -->
                <div class="swiper-pagination"></div>
                <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
            </div>

        </div>



    </div>
