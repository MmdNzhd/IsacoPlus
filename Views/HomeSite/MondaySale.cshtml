        .search-loading {
            position: relative;
            width: 150px;
            height: 150px;
            margin: 0 auto;
        }

            .search-loading .my-loader {
                height: 150px;
                width: 150px;
                border: 25px solid #fff;
                border-radius: 50%;
                border-top-color: rgb(251, 196, 28);
                -webkit-animation: rotate 1s ease-out infinite;
                animation: rotate 1s ease-out infinite;
            }

            .search-loading .loader-mag-glass {
                position: absolute;
                top: 10px;
                left: 10px;
                width: 135px;
                -webkit-animation: circle 2s linear infinite;
                animation: circle 2s linear infinite;
            }

            .search-loading.finishing .loader-mag-glass path {
                -webkit-transform: scale(0);
                -ms-transform: scale(0);
                transform: scale(0);
                -webkit-transform-origin: center;
                -ms-transform-origin: center;
                transform-origin: center;
                opacity: 0;
                -webkit-transition: all 0.2s ease-out;
                -o-transition: all 0.2s ease-out;
                transition: all 0.2s ease-out;
            }

            .search-loading .loader-complete {
                position: absolute;
                top: 0;
                left: 0;
            }

            .search-loading .loader-complete-bg {
                -webkit-transform: scale(0);
                -ms-transform: scale(0);
                transform: scale(0);
                -webkit-transition: -webkit-transform 0.2s ease-out;
                transition: -webkit-transform 0.2s ease-out;
                -o-transition: transform 0.2s ease-out;
                transition: transform 0.2s ease-out;
                transition: transform 0.2s ease-out, -webkit-transform 0.2s ease-out;
                -webkit-transition-delay: 0.15s;
                -o-transition-delay: 0.15s;
                transition-delay: 0.15s;
                -webkit-transform-origin: center;
                -ms-transform-origin: center;
                transform-origin: center;
            }

            .search-loading .loader-complete-check {
                -webkit-transform: scale(0) rotate(-720deg);
                -ms-transform: scale(0) rotate(-720deg);
                transform: scale(0) rotate(-720deg);
                -webkit-transition: -webkit-transform 0.5s ease-out;
