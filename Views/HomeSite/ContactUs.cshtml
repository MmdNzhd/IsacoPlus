        $('#contactForm').submit(function (e) {
            e.preventDefault();
            console.log($("#email1").val())
            var formData = new FormData(this);
            $.ajax({
                type: "Post",
                url: '/HomeSite/AddContactusMessage',
                data: {
                    "Email": $("#email1").val(),
                    "Name": $("#fullName").val(),
                    "Text":   $("#description").val(),
                },
                success: function (data) {
                    if (data.status == 0) {
                        Toast.fire({
                            icon: 'error',
                            title: data.message
                        })
                      
                    }
                    else {
                        Toast.fire({
                            icon: 'success',
                            title: data.message

                        })
                        $("#email1").val("");
                        $("#fullName").val("");
                        $("#description").val("");

                    }
                }
            });
