@section Scripts{
    <script>
        GetCities('@Model.Province')
        const sleep = (milliseconds) => {
            return new Promise(resolve => setTimeout(resolve, milliseconds))
        }

        $("#editProfileSubmit").click(function () {
            var fdata = new FormData();
            var fileUpload = $("#fileToUpload").get(0);
            var files = fileUpload.files;
            fdata.append("file", files[0]);
            let fullName = $("#fullName").val();
            let names = fullName.split(" ");
            let firstName = names[0];
            let lastName = names[1];
            if (!firstName && lastName) {
                Toast.fire({
                    icon: 'error',
                    title: "لطفا نام و نام خانوادگی را با فاصله از هم بنویسید"

                })
                return;
            }
            fdata.append("FirstName", firstName);
            fdata.append("LastName", lastName);
            fdata.append("PhoneNumber", $("#phone").val());
            fdata.append("CallbackUrl", "/ShopProduct/ShopBasket");
            fdata.append("Email", $("#email1").val());
            fdata.append("NationalCode", $("#nationalCode").val());
            fdata.append("CartNumber", $("#cartNumber").val());
            fdata.append("Address", $("#address").val());
            fdata.append("province", $("#province").val());
            fdata.append("city", $("#city").val());
            fdata.append("postalCode", $("#postalCode").val());

            $.ajax({
                type: "POST",
                url: "/SiteAccount/SaveProfile",
                data: fdata,
                contentType: false,
                processData: false,
                success: function (res) {
                    if (res.status == 1) {
                        $("#centralModalEditProfile").modal("hide");

                        Toast.fire({
                            icon: 'success',
                            title: "با موفقیت ثبت شد"

                        })
                        sleep(2000).then(() => {
                            location.reload();
                        })
                    }
                    else {

                        Toast.fire({
                            icon: 'error',
                            title: res.message

                        })


                    }
                }
            });
        });
        //GetCities
        $("#province").on("change", function (val) {
            GetCities($("#province").val());
        })
        function GetCities(province) {
            $.ajax({
                type: "Get",
                url: "/GetCities?province=" + province,
                data: {},
                contentType: 'application/json',
                //processData: false,
                success: function (res) {
                    if (res.status == 1) {
                        let citySelec = $("#city").empty();

                        @*res.data.forEach(city => {
                            if (city == '@Model.City') {
                                citySelec.append(`<option value=${city} selected>${city}  </option>`)

                            }
                            else {
                                citySelec.append(`<option value=${city}>${city} </option>`)

                            }*@

                        var items = "";
                        $.each(res.data, function (i, row) {
                            console.log(row);
                            items += "<option value='" + row + "'>" + row + "</option>";
                        });
                        $("#city").html(items);

                        }

                    else {
                        let errors = `<p> `;
                        res.error.forEach(er => {
                            errors += `${er}<br />`;
                        });
                        errors += `<p/>`;

                        Toast.fire({
                            icon: 'error',
                            title: errors

                        })


                    }
                }
            });
        }


        function getDetails(id,date) {
            $.ajax({
                type: "Get",
                url: "/GetFactorDetails?id=" + id,
                data: {},
                dataType: "html",
                contentType: 'application/json',
                //processData: false,
                success: function (res) {
                    $("#factor").modal();
                    $(".modal-body").html(res);
                    $("#factorDate").html(date);

                },
                error: function (err) {
                    Toast.fire({
                        icon: 'error',
                        title: "خطایی رخ داده است"

                    })

                }





            });
        }

        function copyPostalCode(item){
        var code=$(item).attr("id");
        var fullLink = document.createElement('input');
        document.body.appendChild(fullLink);
        fullLink.value = code;
        fullLink.select();
        document.execCommand("copy", false);
        fullLink.remove();
       location.href="https://tracking.post.ir/";
       

        }
    </script>
